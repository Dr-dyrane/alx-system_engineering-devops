global
    log /dev/log    local0
    log /dev/log    local1 notice
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend www-https
    bind *:443 ssl crt /etc/letsencrypt/live/www.dr-dyrane.tech/fullchain.pem
    reqadd X-Forwarded-Proto:\ https
    default_backend web-servers

backend web_servers
    balance roundrobin
    server 294840-web-01 100.25.46.228:80 check
    server 294840-web-02 54.236.222.22:80 check